nav.navbar.navbar-expand-lg.navbar-light.bg-light
  a.navbar-brand(routerLink='start', *ngIf="!isMobile")
    i.fa.fa-home
  .nav-item.dropdown.mobile-filter-menue(*ngIf='isMobile')
    a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
      | Filters
    .dropdown-menu(aria-labelledby='navbarDropdown')
      a.dropdown-item(selected, *ngFor="let item of filterIdArray", (click)='setFilter(item)', style='cursor:pointer') F{{item}}
    .nav-item(*ngIf='filterLabel') {{filterLabel}}
      i.fa.fa-filter
  button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.active
        a.nav-link(routerLink='start')
          | Start
          span.sr-only (current)
      li.nav-item
        a.nav-link(routerLink='page2') Page2
      li.nav-item.dropdown(*ngIf='!isMobile')
        a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
          | Filters
        .dropdown-menu(aria-labelledby='navbarDropdown')
          a.dropdown-item(selected, *ngFor="let item of filterIdArray", (click)='setFilter(item)', style='cursor:pointer') F{{item}}
      .nav-item(*ngIf='filterLabel && !isMobile') {{filterLabel}}
        i.fa.fa-filter
    ul#userName.navbar-nav
      li.nav-item.dropdown
        a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
          i.fa.fa-user
          |  UserName
        .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdown')
          a.dropdown-item(href='#')
            i.fa.fa-unlock
            |  Password
          a.dropdown-item((click)='_auth.logoutUser()', style='cursor:pointer')
            i.fa.fa-sign-out
            |  Sign out
    ng-content
